{
    "info": {
        "name": "Course Platform API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/v1/auth/register",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": {
                                "email": "newuser@example.com",
                                "password": "NewPass123",
                                "full_name": "New User"
                            }
                        }
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/v1/auth/login",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/x-www-form-urlencoded"
                            }
                        ],
                        "body": {
                            "mode": "urlencoded",
                            "urlencoded": [
                                {
                                    "key": "username",
                                    "value": "{{email}}"
                                },
                                {
                                    "key": "password",
                                    "value": "{{password}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Current User",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/v1/auth/me",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "Courses",
            "item": [
                {
                    "name": "List Courses",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/v1/courses",
                        "query": [
                            {
                                "key": "skip",
                                "value": "0"
                            },
                            {
                                "key": "limit",
                                "value": "10"
                            },
                            {
                                "key": "category",
                                "value": ""
                            },
                            {
                                "key": "level",
                                "value": ""
                            },
                            {
                                "key": "search",
                                "value": ""
                            },
                            {
                                "key": "order_by",
                                "value": "newest"
                            }
                        ]
                    }
                },
                {
                    "name": "Create Course",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/v1/courses",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": {
                                "title": "New Course",
                                "subtitle": "Course Subtitle",
                                "description": "Course Description",
                                "category": "Programming",
                                "language": "English",
                                "level": "beginner",
                                "price": null,
                                "thumbnail_url": null,
                                "promo_video_url": null,
                                "is_published": false
                            }
                        }
                    }
                },
                {
                    "name": "Get Course",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/v1/courses/{{course_id}}"
                    }
                }
            ]
        },
        {
            "name": "Lessons",
            "item": [
                {
                    "name": "List Course Lessons",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/v1/courses/{{course_id}}/lessons",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Create Lesson",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/v1/courses/{{course_id}}/lessons",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": {
                                "title": "New Lesson",
                                "content": "Lesson content here",
                                "video_url": null,
                                "duration_seconds": null,
                                "is_preview": false
                            }
                        }
                    }
                }
            ]
        },
        {
            "name": "Enrollments",
            "item": [
                {
                    "name": "Enroll in Course",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/v1/courses/{{course_id}}/enroll",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Get My Enrollments",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/v1/me/enrollments",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "Reviews",
            "item": [
                {
                    "name": "List Course Reviews",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/v1/courses/{{course_id}}/reviews"
                    }
                },
                {
                    "name": "Create Review",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/v1/courses/{{course_id}}/reviews",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": {
                                "rating": 5,
                                "comment": "Great course!"
                            }
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        },
        {
            "key": "course_id",
            "value": "",
            "type": "string"
        },
        {
            "key": "email",
            "value": "",
            "type": "string"
        },
        {
            "key": "password",
            "value": "",
            "type": "string"
        }
    ]
}
